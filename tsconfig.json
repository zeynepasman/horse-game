{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@types/*": ["types/*"],
      "@models/*": ["types/models/*"],
      "@store/*": ["store/*"],
      "@components/*": ["components/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["utils/*"],
      "@styles/*": ["styles/*"]
    },
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
